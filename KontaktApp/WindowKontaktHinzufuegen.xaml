<Window x:Class="KontaktApp.WindowKontaktHinzufuegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KontaktApp"
        mc:Ignorable="d"
        Title="Kontakt" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Name:" HorizontalContentAlignment="Right"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Geburtsdatum:" HorizontalContentAlignment="Right"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Geschlecht:" HorizontalContentAlignment="Right"/>

        <TextBox x:Name="TextBoxName" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <DatePicker x:Name="DatePickerGeburtstag" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <ComboBox x:Name="ComboBoxGeschlecht" Grid.Row="2" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="Weiblich"/>
            <ComboBoxItem Content="Männlich"/>
            <ComboBoxItem Content="Divers"/>
        </ComboBox>

        <UniformGrid Columns="2" Grid.Row="3" Grid.Column="1">
            <Button x:Name="ButtonCancel" Content="Abbrechen" Margin="5" Padding="10" IsCancel="True"/>
            <Button x:Name="ButtonOK" Content="OK" Margin="5" Padding="10" IsDefault="True" Click="ButtonOK_Click"/>
        </UniformGrid>
        
    </Grid>
</Window>
