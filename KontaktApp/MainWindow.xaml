<Window x:Class="KontaktApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KontaktApp"
        mc:Ignorable="d"
        Title="Kontakte" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Background="WhiteSmoke">
            <Button x:Name="ButtonAdd" Content="Hinzufügen" Margin="10" Padding="5" Click="ButtonAdd_Click"/>
            <Button x:Name="ButtonEdit" Content="Bearbeiten" Margin="10" Padding="5" Click="ButtonEdit_Click"/>
            <Button x:Name="ButtonRemove" Content="Löschen" Margin="10" Padding="5" Click="ButtonRemove_Click"/>
            <Separator Margin="10"/>
            <Button x:Name="ButtonLaden" Content="Laden" Margin="10" Padding="5" Click="ButtonLaden_Click"/>
            <Button x:Name="ButtonSpeichern" Content="Speichern" Margin="10" Padding="5" Click="ButtonSpeichern_Click"/>
            <Separator Margin="10"/>
            <Button x:Name="ButtonReferenz" Content="Referenz" Margin="10" Padding="5" Click="ButtonReferenz_Click"/>
        </StackPanel>

        <UniformGrid Columns="2">
            <ListView x:Name="ListViewKontakte"></ListView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label x:Name="LabelStatistik" Grid.Row="0" Content="Statistik:" Padding="10" Background="WhiteSmoke"/>
                <Canvas x:Name="CanvasDraw" Grid.Row="1" Background="LightCoral"/>
            </Grid>
        </UniformGrid>
    </DockPanel>
</Window>
